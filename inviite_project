server {
    listen 80;
    server_name https://osheaobajoseph3.wixsite.com/potterslounge/event-details/qavah/';

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /media/ {
        alias /home/user/invite_project/media/;  # Replace with the correct path
    }

    location /static/ {
        alias /home/user/invite_project/static/;  # Replace with the correct path
    }

    # Optional: Secure SSL configuration
    # listen 443 ssl;
    # ssl_certificate /path/to/ssl/certificate.crt;
    # ssl_certificate_key /path/to/ssl/certificate.key;
}


